<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="#B92438"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="absa"
            android:textSize="18sp"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/absa"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Absa bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Account Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/a_name"
                android:gravity="center_horizontal"
                android:textColor="@android:color/darker_gray"
                android:text="Boxer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Account Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/a_type"
                android:gravity="center_horizontal"
                android:textColor="@android:color/darker_gray"
                android:text="Cheque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Account Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/a_no"
                android:gravity="center_horizontal"
                android:textColor="@android:color/darker_gray"
                android:text="14432524524"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Branch Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/b_code"
                android:gravity="center_horizontal"
                android:textColor="@android:color/darker_gray"
                android:text="63400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Branch Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@android:color/darker_gray"
                android:text="Empangeni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:textColor="@android:color/darker_gray"
                android:text="Your order id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>